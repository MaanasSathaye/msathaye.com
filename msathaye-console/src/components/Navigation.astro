---
const currentPath = Astro.url.pathname
const links = [
  { href: '/', label: 'home' },
  { href: '/about/', label: 'about' },
  { href: '/posts/', label: 'posts' },
]
---

<nav class="flex items-center gap-6 mb-12 text-3xl md:text-4xl">
  {
    links.map(({ href, label }) => (
      <a
        href={href}
        class:list={[
          'no-underline transition-colors',
          currentPath === href || (href !== '/' && currentPath.startsWith(href))
            ? 'text-purple-deep dark:text-purple-hover font-semibold'
            : 'text-black dark:text-purple-muted hover:text-purple-deep dark:hover:text-purple-hover',
        ]}
      >
        {label}
      </a>
    ))
  }
  <button
    id="theme-toggle"
    class="ml-auto p-2 text-black dark:text-purple-muted hover:text-purple-deep dark:hover:text-purple-hover transition-colors cursor-pointer"
    aria-label="Toggle dark mode"
  >
    <svg id="icon-sun" class="w-6 h-6 hidden dark:block" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="5" />
      <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
    </svg>
    <svg id="icon-moon" class="w-6 h-6 block dark:hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
    </svg>
  </button>
</nav>

<script>
  document.getElementById('theme-toggle')!.addEventListener('click', () => {
    const html = document.documentElement;
    const isDark = html.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
</script>
