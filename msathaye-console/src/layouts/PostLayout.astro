---
import BaseLayout from './BaseLayout.astro'
import Giscus from '../components/Giscus.astro'

interface Props {
  frontmatter: {
    title: string
    date: Date
    topic?: string
    description?: string
  }
}

const { frontmatter } = Astro.props
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="prose prose-stone prose-lg max-w-none prose-headings:text-black prose-a:text-blue-700 prose-a:no-underline hover:prose-a:underline prose-blockquote:border-l-purple-deep prose-blockquote:text-stone-800 prose-blockquote:italic prose-img:rounded-lg">
    <h1 class="mb-2">{frontmatter.title}</h1>
    <time class="text-stone-800 text-sm block mb-8 not-prose">
      {frontmatter.date.toISOString().split('T')[0]}
    </time>
    <slot />
  </article>
  <Giscus />
</BaseLayout>
